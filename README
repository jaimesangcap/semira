Installation (on ubuntu):

  sudo apt-get install gstreamer-tools gstreamer0.10-plugins-good gstreamer0.10-plugins-bad gstreamer0.10-plugins-bad-multiverse gstreamer0.10-plugins-ugly gstreamer0.10-plugins-ugly-multiverse gstreamer0.10-ffmpeg lame
  sudo wget -O /usr/local/bin/lein https://github.com/technomancy/leiningen/raw/stable/bin/lein
  sudo chmod +x /usr/local/bin/lein

  sudo adduser semira
  echo '[]' | sudo tee /var/lib/semira.sexp
  sudo ln -s /media/music /var/lib/semira
  sudo touch /var/log/semira.log
  sudo chown semira:semira /var/lib/semira.sexp /var/log/semira.log

  sudo su - semira
  git clone https://github.com/remvee/semira.git app
  cd app
  mkdir -p ~/.m2/; cp deploy/m2-settings.xml ~/.m2/
  lein deps
  exit

  sudo cp ~semira/app/deploy/upstart-semira.sh /etc/init/semira.conf
  sudo vi /etc/apache2/sites-available/semira # adjust PORT
  sudo cp deploy/apache-semira.conf /etc/apache2/sites-available/semira
  sudo vi /etc/apache2/sites-available/semira # adjust ServerName and ProxyPass portnumbers

  tail -f /var/log/semira.log &
  sudo start semira
  sudo a2ensite semira
  sudo /etc/init.d/apache2 restart
